<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hhf.mapper.UserMapper">

    <select id="selectPage" parameterType="com.hhf.entity.User" resultType="com.hhf.entity.User">
        select * from  user where 1=1
        <if test="yes !='' and yes !=null ">
           and yes=#{yes}
        </if>
        <if test="createDate !=null ">
          and  createDate <![CDATA[ >= ]]> #{createDate,jdbcType=TIMESTAMP}
        </if>
        <if test="pageIndex !=null and pageSize !=null ">
            LIMIT #{pageSize} OFFSET #{pageIndex}
        </if>
    </select>

    <select id="selectCount" parameterType="com.hhf.entity.User" resultType="java.lang.Long">
        select count(1) from  user where  1=1
        <if test="yes !='' and yes !=null ">
            and   yes=#{yes}
        </if>
        <if test="createDate !=null ">
            and   createDate <![CDATA[ >= ]]> #{createDate,jdbcType=TIMESTAMP}
        </if>

    </select>

</mapper>
